{
  "name": "slowcore-app",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Tomasz Buszewski",
    "email": "tomasz@buszewski.com"
  },
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "build-storybook": "storybook build",
    "dev": "remix vite:dev",
    "dev:mocks": "VITE_MOCKS=true remix vite:dev",
    "postinstall": "node ./utils/verify-env.js",
    "lint:format": "prettier --write 'app/**/*.{ts,tsx}'; eslint --fix 'app/**/*.{ts,tsx}'",
    "plop": "plop",
    "postplop": "pnpm exec lint:format",
    "start": "remix-serve ./build/server/index.js",
    "storybook": "storybook dev -p 6006",
    "test": "vitest",
    "test:e2e": "VITE_MOCKS=true pnpm exec playwright test",
    "test:e2e:serve": "VITE_MOCKS=\"true\" pnpm run build && VITE_MOCKS=\"true\" pnpm run start",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@remix-run/node": "^2.14.0",
    "@remix-run/react": "^2.14.0",
    "@remix-run/serve": "^2.14.0",
    "clsx": "^2.1.1",
    "isbot": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@playwright/test": "^1.48.1",
    "@remix-run/dev": "^2.14.0",
    "@remix-run/testing": "^2.14.0",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/addon-onboarding": "^8.3.5",
    "@storybook/blocks": "^8.3.5",
    "@storybook/react": "^8.3.5",
    "@storybook/react-vite": "^8.3.5",
    "@storybook/test": "^8.3.5",
    "@tailwindcss/forms": "^0.5.9",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^22.7.9",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.19",
    "dotenv": "^16.4.5",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^0.11.0",
    "globals": "^15.11.0",
    "happy-dom": "^15.7.4",
    "msw": "^2.6.4",
    "plop": "^4.0.1",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "remix-development-tools": "^4.7.3",
    "remix-flat-routes": "^0.6.5",
    "storybook": "^8.3.5",
    "tailwindcss": "^3.4.4",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-view-transitions": "^0.1.1",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.1.0",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.1.2"
  },
